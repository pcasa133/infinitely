{
  "install": "npm install",
  "start": "node server.js",
  "watch": {
    "throttle": 1000,
    "install": {
      "include": [
        "^package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "^\\.env$",
        "^server\\.js$"
      ]
    },
    "noRestart": {
      "include": [
        "^public/",
        "^assets/"
      ]
    }
  }
} 